---
import BaseLayout from '@/layouts/BaseLayout.astro';
import {
  ProjectScreen,
  getAllProjectsForStaticPaths,
  getTranslatedProjectBySlug,
  type TranslatedProject,
} from '@/features/projects';
import { ui, type LanguageCode } from '@/i18n/ui';


export async function getStaticPaths() {
  const projects = await getAllProjectsForStaticPaths();
  return projects.map((project) => ({
    params: { slug: project.slug },
  }));
}

const { slug } = Astro.params;
const lang = Astro.currentLocale as LanguageCode;
const project = await getTranslatedProjectBySlug(slug!, lang);

const t = ui[lang];

if (!project) {
  return Astro.redirect(getRelativeLocaleUrl(lang, '/404'));
}

const pageTitle = `${project.title} | ${t.site.title}`;
const pageDescription = project.detailedDescription ?? project.description;
---

<BaseLayout pageTitle={pageTitle} pageDescription={pageDescription}>
  <ProjectScreen project={project} t={t} lang={lang} />
</BaseLayout>
