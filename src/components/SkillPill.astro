---
// src/components/SkillPill.astro
import { Icon } from 'astro-icon/components';

export interface Props {
  text: string;
  iconName: string;
  colorClass: string;
}

const { text, iconName, colorClass } = Astro.props;
---
<div class={`flex items-center gap-2 px-3 py-1.5 rounded-lg font-mono text-white text-sm ${colorClass}`}>
  <Icon name={iconName} class="w-5 h-5" />
  <span>{text}</span>
</div>